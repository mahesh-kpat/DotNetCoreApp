@{
    ViewData["Title"] = "Book Details - " + Model.Title;

}
@model BookModel


<h1>GetBook</h1>

<table>
    <tr>
        <td>Book Id</td>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <td>Book Title</td>
        <td>@Model.Title</td>
    </tr>
    <tr>
        <td>Author Name</td>
        <td>@Model.Author</td>
    </tr>
    <tr>
        <td>Language</td>
        <td>@Model.Language</td>
    </tr>
    <tr>
        <td>Description</td>
        <td>@Model.Description</td>
    </tr>
    <tr>
        <td>pdf book</td>
        <td>
            <a class="btn btn-outline-primary" data-toggle="modal" data-target="#exampleModal">Read Now</a>


            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">

                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <embed src="@Model.BookPdfUrl" class="w-100" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>

        </td>
    </tr>

</table>




<div id="footerDiv" style="background-color:black; padding:50px; margin-top:1000px; width:100%; height:100px;">
    <table style="color:white; width:100%;">
        <tr>
            <td>This is the table</td>
        </tr>
    </table>

</div>